<% layout('../layouts/boilerplate') %>
    <h1 class="text-center mb-5">ALL BLOG</h1>
    <ul>
        <% for(let data of items) { %>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid" src="<%= data.image%>" alt="<%= data.title%>" style="width: 100%; height: 15vw; object-fit: cover;">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%= data.title%></h5>
                            <p class="card-text">
                            <small class="text-muted"><%=data.created.toDateString()%></small>
                            </p>
                            <div class="card-text"><p><%= data.description.substring(0,200)%>...........</p></div>
                            <div class="class-text mt-2"><b>Written by: <%= data.author%></b></div>
                            <a class="btn btn-primary mt-2" href="/blog/<%= data._id%>">View Blog</a>
                            <a href="/blog/new" class="card-link btn btn-info mt-2">Add Blog</a>
                        </div>
                    </div>
                </div>
            </div>
            
        <% }%>
    </ul>