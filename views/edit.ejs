<% layout('../layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">Edit Blog</h1>
    <div class="col-md-6 offset-3">
        <form action="/blog/<%=blog._id%>?_method=PUT" method="POST">
            <div class="mb-3">
            <label class="form-label" for="edittitle">Title</label>
            <input class="form-control" type="text" id="edittitle" placeholder="Add Title" name="title" value="<%= blog.title %>">
            </div>
            <div class="mb-3">
            <label class="form-label" for="editblog">New Blog</label>
            <textarea class="form-control" id="editblog" placeholder="Write your Blog" name='description' rows="5"><%= blog.description%></textarea>
            </div>
            <div class="mb-3">
            <label class="form-label" for="editimage">Image URL</label>
            <input class="form-control" type="text" id="editimage" placeholder="Image URL" name="image" value="<%= blog.image%>">
            </div>
            <div class="mb-3">
            <label class="form-label" for="editauthor">Author</label>
            <input class="form-control" type="text" id="editauthor" placeholder="Author's name" name="author" value="<%= blog.author%>">
            </div>
            <button type="submit" class="btn btn-primary mt-3">Submit</button>
            <button class="btn btn-danger mt-3"><a style="text-decoration: none; color: white;" href="/blog/<%= blog._id%>">Discard</a></button>
        </form>
    </div>
</div>